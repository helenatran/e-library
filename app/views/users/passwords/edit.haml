:sass
  #content-wrap
    margin-top: 50px
    margin-left: auto
    margin-right: auto
    width: 100%

  #change_password_content
    display: flex
    justify-content: center

  #change_password_options
    display: flex
    flex-direction: column

#content-wrap
  #change_password_content
    = image_tag 'logos/book-512x512.png', width: '350px', height: '350px', style: 'margin-right: 50px'

    #change_password_options
      %h2 Change your password
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = f.error_notification
        = f.input :reset_password_token, as: :hidden
        = f.full_error :reset_password_token
        .form-inputs
          = f.input :password, label: "New password", required: true, autofocus: true, input_html: { autocomplete: "new-password" }
          = f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: { autocomplete: "new-password" }
        .form-actions
          = f.button :submit, "Change my password", class: 'btn btn-info'
      = render "devise/shared/links"
