= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :reference_number
    = f.text_field :reference_number
  .field
    = f.label :edition
    = f.text_field :edition
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :author
    = f.text_field :author
  .actions
    = f.submit 'Save'
